<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="Ingresar Orden"
        android:textColor="@color/textPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Relevancia -->
    <EditText
        android:id="@+id/txtRelevancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Relevancia"
        android:padding="12dp" />

    <!-- Fecha de Elaboración -->
    <EditText
        android:id="@+id/txtFechaElaboracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Fecha de Elaboración"
        android:padding="12dp"
        android:text="Seleccionar Fecha"
        android:clickable="true"
        android:focusable="false"
        android:textColor="@color/textPrimary"
        android:textAlignment="center" />

    <!-- Estado -->
    <EditText
        android:id="@+id/txtEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Estado"
        android:padding="12dp" />

    <!-- Observación Técnico -->
    <EditText
        android:id="@+id/txtObservacionTecnico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edittext_background"
        android:hint="Observación Técnico"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:padding="12dp" />

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btnSaveOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/buttonColor"
        android:padding="12dp"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>
